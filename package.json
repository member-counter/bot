{
	"name": "member-counter-bot",
	"version": "1.0.0",
	"description": "",
	"main": "./dist/index.js",
	"scripts": {
		"start": "node .",
		"cm": "cz",
		"start:docker": "docker compose -f docker-compose.yml up",
		"build": "tsc && tscp",
		"build:docker": "docker build . -t member-counter-bot:latest",
		"dev": "ts-node-dev --inspect --poll --respawn --ignore-watch node_modules src/index.ts",
		"dev:docker": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up ",
		"lint": "eslint --fix .",
		"deployInteractions": "node ./dist/deployCommands.js",
		"deployInteractions:docker": "docker run --env-file .env --entrypoint node member-counter-bot:latest /app/dist/deployCommands.js",
		"i18nToRedis": "node ./dist/i18nToRedis.js",
		"i18nToRedis:docker": "docker compose run --rm --name member-counter-bot-i18n-to-redis --entrypoint node member-counter-bot /app/dist/i18nToRedis.js",
		"debug:docker": "docker run -ti --entrypoint sh member-counter-bot:latest",
		"prepare": "husky install"
	},
	"keywords": [
		"discord",
		"boilerplate",
		"template"
	],
	"author": "eduardozgz@protonmail.com",
	"license": "MIT",
	"engines": {
		"node": ">=16.0"
	},
	"dependencies": {
		"@discordjs/builders": "^1.2.0",
		"@discordjs/rest": "^1.1.0",
		"@hapi/bourne": "^2.0.0",
		"@types/node": "^18.7.16",
		"discord-api-types": "^0.37.7",
		"discord.js": "^14.3.0",
		"dotenv": "^10.0.0",
		"husky": "^7.0.4",
		"i18next": "^21.9.1",
		"ioredis": "^4.28.3",
		"joi": "^17.5.0",
		"lodash": "^4.17.21",
		"mongoose": "^6.5.3",
		"run-script-os": "^1.1.6",
		"twemoji": "^13.1.0",
		"typescript-cp": "^0.1.6",
		"uuid": "^8.3.2",
		"winston": "^3.8.2"
	},
	"devDependencies": {
		"@swc/cli": "^0.1.57",
		"@swc/core": "^1.2.249",
		"@types/ioredis": "^4.28.7",
		"@types/lodash": "^4.14.178",
		"@types/twemoji": "^12.1.2",
		"@typescript-eslint/eslint-plugin": "^5.36.2",
		"@typescript-eslint/parser": "^5.36.2",
		"commitizen": "^4.2.5",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.23.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.2.1",
		"lint-staged": "^13.0.3",
		"prettier": "^2.5.1",
		"ts-node-dev": "^1.1.8",
		"typescript": "^4.8.2"
	},
	"lint-staged": {
		"*.{js,ts}": "eslint --cache --fix",
		"*.{js,ts,css,html,md,json}": "prettier --write --ignore-path .gitignore"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
