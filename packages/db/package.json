  "devDependencies": {
    "@mc/eslint-config": "workspace:*",
    "@mc/prettier-config": "workspace:*",
    "@mc/tsconfig": "workspace:*",
    "@types/node": "^20.12.9",
    "dotenv-cli": "^7.4.1",
    "eslint": "^9.2.0",
    "prettier": "^3.2.5",
    "prisma": "^5.14.0",
    "typescript": "^5.4.3"
  },
  "prettier": "@mc/prettier-config",
  "dependencies": {
    "@prisma/client": "^5.10.2",
    "@t3-oss/env-core": "^0.10.1",
    "zod": "^3.23.3"
  }
}
