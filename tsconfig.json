{
	"ts-node": { "swc": true },
	"ts-node-dev": { "swc": true },
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2021",
		"moduleResolution": "node",
		"resolveJsonModule": false,
		"esModuleInterop": true,
		"sourceMap": true,
		"rootDir": "./src",
		"outDir": "./dist",
		"noErrorTruncation": true,
		"noUncheckedIndexedAccess": true,
		"allowJs": true,
		"skipLibCheck": true
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules"]
}
