{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2021",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"outDir": "./dist",
		"strict": true,
		"noErrorTruncation": true,
		"noUncheckedIndexedAccess": true,
		"allowJs": true,
		"skipLibCheck": true
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules"]
}
