{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"outDir": "./dist",
		"allowJs": true,
		// TODO: Remove in the next eris update #1063
		"skipLibCheck": true
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules", "res"]
}
