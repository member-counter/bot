{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"outDir": "./dist",
		"allowJs": true,
		"removeComments": true,
		"plugins": [
			{
				"name": "typescript-tslint-plugin"
			}
		]
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules", "res"]
}
